{% comment %}
  FAQ Header Snippet with CSS
  Usage: {% render 'faq_header', section: section, heading: heading %}
{% endcomment %}

<style>
.element,
.element * {
  font-family: "Poppins", sans-serif !important;
  font-weight: 400 !important;
}


    /* --- Layout & header --- */
.faq__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.faq__title {
  margin: 0;
  font-size: clamp(1.5rem, 2vw, 2rem);
  font-weight: 700;
}

.faq__subtitle {
 margin-top: 0.4rem; /* Space between title and subtitle */
  margin-bottom: 1rem; /* Space below subtitle */
  color: rgba(0, 0, 0, .65);
}

.faq__help-wrapper {
  flex-shrink: 0;
}

.faq__help-btn {
  display: inline-flex;
  align-items: center;
  gap: .5rem;
  padding: .7rem 1.1rem;
  border-radius: 999px;
  text-decoration: none;
  font-weight: 700;
  background: #FFD200;
  color: #111;
  border: 1px solid #E6B800;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .08);
  transition: transform .15s ease, box-shadow .15s ease, background-color .15s ease, border-color .15s ease;
}

.faq__help-btn:hover {
  background: #FFD200;
  border-color: #d4a900;
  transform: translateY(-1px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, .12);
}

.faq__help-btn:focus {
  outline: 2px solid #111;
  outline-offset: 2px;
}

.faq__help-icon {
  width: 18px;
  height: 18px;
  display: inline-block;
  fill: currentColor;
}

/* Small screens */
@media (max-width: 680px) {
  .faq__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .faq__help-wrapper {
    align-self: flex-start;
  }

}

</style>

<div class="faq__header">
  <div class="faq__headings">
    <h1 class="faq__title">{{ heading }}</h1>
    {% if section.settings.subtitle != blank %}
      <p class="faq__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
  
  {% if section.settings.help_text != blank and section.settings.help_link != blank %}
    <div class="faq__help-wrapper">
      <a class="faq__help-btn" href="{{ section.settings.help_link }}" aria-label="{{ section.settings.help_text }}">
        <svg class="faq__help-icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
          <path d="M12 2a10 10 0 1 0 .001 20.001A10 10 0 0 0 12 2Zm0 15.25a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5Zm.02-10.5c2.1 0 3.73 1.3 3.73 3.2 0 1.35-.74 2.29-1.96 2.96-.95.52-1.27.9-1.27 1.69v.3h-1.9v-.36c0-1.33.54-2.03 1.76-2.68.92-.49 1.45-.98 1.45-1.9 0-.89-.76-1.54-1.82-1.54-1.07 0-1.86.6-2.06 1.58l-1.88-.4c.36-1.77 1.97-2.95 3.95-2.95Z"/>
        </svg>
        <span>{{ section.settings.help_text }}</span>
      </a>
    </div>
  {% endif %}
</div>