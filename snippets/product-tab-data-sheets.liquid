<style>
  .datasheet-link {
    background-color: #ffd700;
    color: #000;
    padding: 8px 12px;
    border-radius: 6px;
    font-weight: 600;
    display: inline-flex;
    gap: 8px;
    align-items: center;
  }
</style>
<div class="datasheet-section py-4">
  {% comment %}
  {% if product.tags contains 'Modular Handrails' %}
    <ol class="list-none p-0 m-0">
      <li>
        <a
          class="datasheet-link"
          href="https://cdn.shopify.com/s/files/1/0638/5175/7736/files/Cope_Modolar_Brochure_eSafetySupplies2025.pdf"
          target="_blank"
          >Download Brochure</a
        >
      </li>
    </ol>
  {% else %}
   {% endcomment %}
    {% if product.metafields.custom.product_tabs_product_data_sheet %} 
      {% assign pdf_links = product.metafields.custom.product_tabs_product_data_sheet | split: '|' %}
      <ol class="flex flex-wrap gap-4 p-0 m-0 list-none">
        {% for pdf in pdf_links %}
          <li>
            <a class="datasheet-link" href="{{ pdf | strip }}" target="_blank">View Data Sheet (PDF)</a>
          </li>
        {% endfor %}
      </ol>
    {% else %}
      <p class="text-sm text-gray-600">Data Sheet coming soon!</p>
    {% endif %}
 {% comment %}{% endif %} {% endcomment %}
</div>