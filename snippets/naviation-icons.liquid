<div class="flex space-x-4 items-center text-white">
    <!-- Search Icon -->
    <button id="search-btn" class="p-1 rounded hover:text-bg-light transition">
        <svg class="w-6 h-6 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8" stroke-width="2"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65" stroke-width="2"/>
        </svg>
    </button>
    <!-- Profile/User Icon -->
    <button id="profile-btn" class="p-1 rounded hover:text-bg-light transition">
        <svg class="w-6 h-6 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="8" r="4" stroke-width="2"/>
            <path d="M4 20c0-4 4-6 8-6s8 2 8 6" stroke-width="2"/>
        </svg>
    </button>
    <!-- Cart Icon -->
    <button id="cart-btn" class="relative p-1 rounded hover:text-bg-light transition">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round" class="w-6 h-6 cursor-pointer" ><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6.331 8h11.339a2 2 0 0 1 1.977 2.304l-1.255 8.152a3 3 0 0 1 -2.966 2.544h-6.852a3 3 0 0 1 -2.965 -2.544l-1.255 -8.152a2 2 0 0 1 1.977 -2.304z" /><path d="M9 11v-5a3 3 0 0 1 6 0v5" /></svg>
        {% assign cart_count = 10 %}
        {% if cart_count > 0 %}
        <span class="absolute -top-1 -right-2 bg-bg-light-red text-white text-[10px] rounded-full w-5 h-5 flex items-center justify-center">
           {% if cart_count > 99 %}
  99+
{% else %}
  {{ cart_count }}
{% endif %}
        </span>
        {% endif %}
    </button>
</div>