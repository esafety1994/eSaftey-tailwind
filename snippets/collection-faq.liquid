<!-- FAQ -->
                {% assign faq_data = faq_data %}
                {% assign count = 0 %}

                {% if faq_data and faq_data.children %}
                    <div class="sidebar-faq">
                        <p class="sidebar-faq-title">Frequently asked questions</p>
                        <div class="sidebar-faq-qa-wrapper">

                            {% assign question = "" %}
                            {% assign answer = "" %}

                            {% for item in faq_data.children %}
                                {% for child in item.children %}
                                    {% if child.bold %}
                                        {% if question != "" and answer != "" %}
                                            <div class="sidebar-faq-qa">
                                                <button type="button" class="sidebar-faq-q" aria-expanded="false">
                                                    <span class="faq-q-text">{{ question }}</span>
                                                    <svg class="open-qa-icon" xmlns="http://www.w3.org/2000/svg"
                                                         width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path d="M11.9199 22C17.4199 22 21.9199 17.5 21.9199 12C21.9199 6.5 17.4199 2 11.9199 2C6.41992 2 1.91992 6.5 1.91992 12C1.91992 17.5 6.41992 22 11.9199 22Z"
                                                              stroke="#595959" stroke-width="1.5" stroke-linecap="round"
                                                              stroke-linejoin="round"/>
                                                        <path d="M7.91992 12H15.9199" stroke="#595959"
                                                              stroke-width="1.5" stroke-linecap="round"
                                                              stroke-linejoin="round"/>
                                                    </svg>
                                                    <svg class="close-qa-icon" xmlns="http://www.w3.org/2000/svg"
                                                         width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"
                                                              stroke="#595959" stroke-width="1.5" stroke-linecap="round"
                                                              stroke-linejoin="round"/>
                                                        <path d="M8 12H16" stroke="#595959" stroke-width="1.5"
                                                              stroke-linecap="round" stroke-linejoin="round"/>
                                                        <path d="M12 16V8" stroke="#595959" stroke-width="1.5"
                                                              stroke-linecap="round" stroke-linejoin="round"/>
                                                    </svg>
                                                </button>
                                                <div class="sidebar-faq-a">{{ answer }}</div>
                                            </div>
                                            {% assign count = count | plus: 1 %}
                                        {% endif %}

                                        {% assign question = child.value %}
                                        {% assign answer = "" %}
                                    {% else %}
                                        {% assign answer = answer | append: child.value %}
                                    {% endif %}
                                {% endfor %}

                                {% comment %}{% if count >= 2 %}
                                    {% break %}
                                {% endif %}{% endcomment %}
                            {% endfor %}
                        </div>

                    </div>
                                        <script>
                                            (function(){
                                                if (window.__eSafetyAccordionLoaded) { if (window.esafetyAccordionInit) window.esafetyAccordionInit(document); return; }
                                                window.__eSafetyAccordionLoaded = true;
                                                var l = document.createElement('link');
                                                l.rel = 'stylesheet';
                                                l.href = '{{ "accordion.css" | asset_url }}';
                                                document.head.appendChild(l);
                                                var s = document.createElement('script');
                                                s.src = '{{ "accordion.js" | asset_url }}';
                                                s.defer = true;
                                                s.onload = function(){ if (window.esafetyAccordionInit) window.esafetyAccordionInit(document); };
                                                document.body.appendChild(s);
                                            })();
                                        </script>
                {% else %}
                    {% comment %}<p>No FAQ available.</p>{% endcomment %}
                {% endif %}