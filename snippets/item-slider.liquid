{% assign slider_id = slider_id | default: block.id | replace: '_', '' | downcase %}

<div class="item-slider item-slider-{{ slider_id }} py-12 bg-white">
  {% if title or subtitle %}
    <div class="text-center">
      {% if title %}<h2 class="text-3xl font-bold">{{ title }}</h2>{% endif %}
      {% if subtitle %}<p class="text-gray-500">{{ subtitle }}</p>{% endif %}
    </div>
  {% endif %}

  <div class="glide glide-{{ slider_id }}">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides flex gap-4">
        {% for item in items %}
          <li class="glide__slide">
            <a href="{{ item.settings.link }}" class="block ...">
              {% if item.settings.image %}
                <img src="{{ item.settings.image | image_url: width:600 }}" alt="{{ item.settings.title | escape }}" class="w-full min-h-76 rounded-3xl">
              {% endif %}
              <div class="mt-4 text-center">
                <h3 class="font-bold text-2xl">{{ item.settings.title }}</h3>
              </div>
            </a>
          </li>
      {% endfor %}

      </ul>
    </div>

    {% if show_navigation %}
      <div class="glide__arrows flex justify-between mt-4" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left px-3 py-1 bg-gray-200 rounded" data-glide-dir="<">‹</button>
        <button class="glide__arrow glide__arrow--right px-3 py-1 bg-gray-200 rounded" data-glide-dir=">">›</button>
      </div>
    {% endif %}

    {% if show_dots %}
      <div class="glide__bullets flex justify-center gap-2 mt-4" data-glide-el="controls[nav]">
        {% for item in items %}
          <button class="glide__bullet w-3 h-3 bg-gray-300 rounded-full" data-glide-dir="={{ forloop.index0 }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof Glide !== 'undefined') {
    new Glide('.glide-{{ slider_id }}', {
      type: 'carousel',
      perView: {{ slides_desktop }},
      gap: {{ card_spacing }},
      autoplay: {% if autoplay %}{{ autoplay_speed | default: 3000 }}{% else %}false{% endif %},
      hoverpause: true,
      bound: true,       // prevents cut-off at edges
      breakpoints: {
        1024: { perView: {{ slides_tablet }} },
        768:  { perView: {{ slides_mobile }} }
      }
    }).mount();
  }
});
</script>
