<section class="w-full flex flex-col space-y-4">
  <div class="flex items-center justify-between">
    {% for block in section.blocks %}
      {% if block.type == 'logo' and block.settings.logo %}
        <div class="logo">
          <a href="{{ shop.url }}">
            <img src="{{ block.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" class="h-20 object-contain">
          </a>
        </div>
      {% endif %}
    {% endfor %}

    <div>{% render 'naviation-icons' %}</div>
  </div>

  <!-- Render navigation only once -->
  <div class="flex items-center space-x-4">
    {% render 'navigation' %}
  </div>
</section>
