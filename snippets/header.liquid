<section class="w-full flex flex-col space-y-4">
  <div class="flex items-center justify-between">
    <div>
      {%  if shop.brand.logo %}
        <a href="/"><img src="{{ shop.brand.logo | image_url: width: 400 }}" alt="{{ shop.name }}" class="h-20 object-contain"></a>
      {% else %}
        <h1 class="text-white text-2xl font-bold">{{ shop.name }}</h1>
      {% endif %}
    </div>
    <div>{% render 'naviation-icons' %}</div>
  </div>

  <!-- Render navigation only once -->
  <div class="flex items-center space-x-4">
  
  </div>
</section>
