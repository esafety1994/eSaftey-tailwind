<nav class="flex items-center justify-center w-full space-x-6 relative">
  {% assign mega_blocks = section.blocks | where: "type", "mega_menu_item" %}

  {% for link in linklists[section.settings.menu].links %}
    <div class="group relative">
      <!-- Top-level link -->
      <a href="{{ link.url }}" class="text-xs font-semibold text-white hover:text-primary transition">
        {{ link.title }}
      </a>

      {% if link.links != blank %}
        <!-- Mega menu panel (full width) -->
        <div class="absolute hidden group-hover:flex left-0 top-full w-screen bg-white shadow-lg p-6 z-50">
          <div class="container mx-auto flex justify-between space-x-6">
            {% for child in link.links %}
              <div class="flex-1">
                <!-- Child link -->
                <a href="{{ child.url }}" class="block text-sm font-semibold text-gray-600 hover:text-bg-light-red border-b pb-1 mb-2">
                  {{ child.title }}
                </a>

                <!-- Grandchild links -->
                {% if child.links != blank %}
                  <ul class="mt-2 space-y-2">
                    {% for grandchild in child.links %}
                      <li>
                        <a href="{{ grandchild.url }}" class="block text-xs text-gray-600 hover:text-bg-light-red">
                          {{ grandchild.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}

                <!-- Mega menu image -->
                {% for block in mega_blocks %}
                  {% if block.settings.menu_item == child.title and block.settings.menu_item_image %}
                    <a href="{{ block.settings.menu_item_link }}" class="mt-2 block">
                      <img src="{{ block.settings.menu_item_image | img_url: '300x' }}" alt="{{ child.title }}" class="w-full object-contain">
                    </a>
                  {% endif %}
                {% endfor %}

              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</nav>
