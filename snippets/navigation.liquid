<nav class="flex items-center justify-center w-full space-x-6 relative">
  {% for link in linklists[section.settings.menu].links %}
    <div class="group relative">
      <!-- Top-level link -->
      <a href="{{ link.url }}" class="text-xs font-semibold text-white hover:text-primary transition">
        {{ link.title }}
      </a>

      {% if link.links != blank %}
        <!-- Mega menu panel -->
        <div class="absolute hidden group-hover:block left-0 top-4 bg-white shadow-lg container p-6 z-50 transition-all">
          <div class="flex justify-between">
            {% for child in link.links %}
              <div class="w-full">
                <a href="{{ child.url }}" class="block text-sm font-semibold text-gray-600 hover:text-bg-light-red border-b pb-1 mx-4">
                  {{ child.title }}
                </a>

                {% if child.links != blank %}
                  <ul class="mt-2 space-y-3 mx-4">
                    {% for grandchild in child.links %}
                      <li>
                        <a href="{{ grandchild.url }}" class="block text-xs text-gray-600 hover:text-bg-light-red">
                          {{ grandchild.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}

                <!-- Mega menu image if exists -->
                {% assign mega_image = section.blocks | where: "type", "mega_menu_item" | where: "settings.menu_item", child.title | first %}
                {% if mega_image and mega_image.settings.menu_item_image %}
                  <div class="mt-2">
                    <a href="{{ mega_image.settings.menu_item_link }}">
                      <img src="{{ mega_image.settings.menu_item_image | img_url: '300x' }}" alt="{{ child.title }}" class="object-contain w-full">
                    </a>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</nav>
