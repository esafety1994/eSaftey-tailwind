<nav class="flex items-center justify-center w-full space-x-6 relative">
  {% for link in linklists[section.settings.menu].links %}
    <div class="group relative">
      <!-- Top-level link -->
      <a href="{{ link.url }}" class="text-xs font-semibold text-white hover:text-primary transition">
        {{ link.title }}
      </a>

      {% if link.links != blank %}
        <!-- Mega menu panel -->
        <div class="absolute hidden group-hover:flex left-0 top-full bg-white shadow-lg w-full p-8 z-50 transition-all">
          <div class="grid grid-cols-{{ link.links.size | at_most: 4 }} gap-8 w-full">
            {% for child in link.links %}
              <div>
                <a href="{{ child.url }}" class="block text-sm font-semibold text-gray-700 hover:text-primary mb-2">
                  {{ child.title }}
                </a>

                {% comment %}
                  Example: try to fetch collection image if child.title matches a collection handle
                {% endcomment %}
                {% assign collection_handle = child.title | handleize %}
                {% assign child_collection = collections[collection_handle] %}

                {% if child_collection and child_collection.image %}
                  <a href="{{ child.url }}">
                    <img 
                      src="{{ child_collection.image | image_url: width: 300 }}" 
                      alt="{{ child.title }}" 
                      class="rounded-lg shadow-md hover:scale-105 transition"
                    >
                  </a>
                {% endif %}

                {% if child.links != blank %}
                  <ul class="mt-3 space-y-2">
                    {% for grandchild in child.links %}
                      <li>
                        <a href="{{ grandchild.url }}" class="block text-xs text-gray-600 hover:text-primary">
                          {{ grandchild.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</nav>
