

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" style="grid-auto-rows: 1fr;">
        {% for article in blog.articles limit: posts_limit %}
          <article class="h-full flex flex-col">
            {% if article.image %}
              <div class="w-full h-60">
                <img
                  src="{{ article.image | image_url: width: 200 }}"
                  alt="{{ article.image.alt | escape }}"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            {% endif %}

            <div class="mt-4 flex flex-col justify-between flex-grow">
                <div><div class="text-xs uppercase">
                {{ article.published_at | date: "%B %d, %Y" }}
              </div>
              <h3 class="text-lg font-medium my-2">
                <a href="{{ article.url }}" class="hover:text-blue-600 transition-colors">
                  {{ article.title }}
                </a>
              </h3>

              {% if article.excerpt != blank %}
                <p class="text-gray-600 text-sm mb-3 line-clamp-3">
                  {{ article.excerpt | strip_html | truncate: 150 }}
                </p>
              {% endif %}</div>

              <div><a
                href="{{ article.url }}"
                class="read-more-button"
              >
                Read more
              </a></div>
            </div>
          </article>
        {% endfor %}
      </div>