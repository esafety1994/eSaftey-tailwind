<!-- contact-us.liquid -->
{% comment %} theme-check-disable RemoteAsset {% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Encode+Sans:wght@800&family=Poppins&display=swap" rel="stylesheet">
{% comment %} theme-check-enable RemoteAsset {% endcomment %}

<div class="contact-form-container">
  <div class="contact-form-header">
    <h2>{{ settings.contact_form_title | default: "Send us a message" }}</h2>
    <p>{{ settings.contact_form_subtitle | default: "Tell us a few details and we'll get back to you. For urgent enquiries, please call 1300 291 700." }}</p>
  </div>
  
  <div class="contact-content-wrapper">
    {% form 'contact' %}
  <!-- SUCCESS MESSAGE - Shows when form is submitted successfully -->
  {% if form.posted_successfully? %}
    <div class="form-success-message">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="#10B981"/>
      </svg>
      <h3>Message Sent Successfully!<br></h3>
      
    </div>
  <script>
    // Only reload if we haven't already reloaded
    if (!window.location.search.includes('reloaded=true')) {
      setTimeout(function() {
        // Add parameter to prevent infinite loop
        if (window.location.search.includes('reloaded=true')) {
          window.location.href = window.location.pathname;
        } else {
          window.location.href = window.location.pathname + '?reloaded=true';
        }
      }, 10000);
    }
  </script>
  {% endif %}
  
  <!-- ERROR MESSAGE - Shows if there are form errors -->
  {% if form.errors %}
    <div class="form-errors">
      {{ form.errors | default_errors }}
    </div>
  {% endif %}
      <div class="form-row">
        <div class="form-group">
          <label for="first-name">{{ settings.first_name_label | default: "First name*" }}</label>
          <input 
            type="text" 
            id="first-name" 
            name="contact[first_name]" 
            placeholder="{{ settings.first_name_placeholder | default: 'Enter your first name' }}"
            required
          >
        </div>

        <div class="form-group">
          <label for="last-name">{{ settings.last_name_label | default: "Last name*" }}</label>
          <input 
            type="text" 
            id="last-name" 
            name="contact[last_name]" 
            placeholder="{{ settings.last_name_placeholder | default: 'Enter your last name' }}"
            required
          >
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="email">{{ settings.email_label | default: "Email*" }}</label>
          <input 
            type="email" 
            id="email" 
            name="contact[email]" 
            placeholder="{{ settings.email_placeholder | default: 'you@company.com' }}"
            required
          >
        </div>

        <div class="form-group">
          <label for="phone">{{ settings.phone_label | default: "Phone" }}</label>
          <input 
            type="tel" 
            id="phone" 
            name="contact[phone]" 
            placeholder="{{ settings.phone_placeholder | default: '04xx xxx xxx' }}"
          >
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="company">{{ settings.company_label | default: "Company" }}</label>
          <input 
            type="text" 
            id="company" 
            name="contact[company]" 
            placeholder="{{ settings.company_placeholder | default: 'Your company name' }}"
          >
        </div>

        <div class="form-group">
          <label for="order-number">{{ settings.order_number_label | default: "Order number (optional)" }}</label>
          <input 
            type="text" 
            id="order-number" 
            name="contact[order_number]" 
            placeholder="{{ settings.order_number_placeholder | default: '#12345' }}"
          >
        </div>
      </div>

      <div class="form-group">
        <label for="topic">{{ settings.topic_label | default: "What can we help you with?*" }}</label>
        <select id="topic" name="contact[topic]" required>
          <option value="" disabled selected>{{ settings.topic_placeholder | default: "Select a topic" }}</option>
          <option value="general">General Inquiry</option>
          <option value="support">Technical Support</option>
          <option value="billing">Billing Question</option>
          <option value="returns">Returns & Refunds</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="form-group">
        <label for="message">{{ settings.message_label | default: "Message*" }}</label>
        <textarea 
          id="message" 
          name="contact[body]" 
          rows="5" 
          placeholder="{{ settings.message_placeholder | default: 'How can we help? Please share as much detail as possible.' }}"
          required
        ></textarea>
      </div>

      <div class="form-group checkbox-group">
        <input type="checkbox" id="privacy-policy" name="contact[privacy_policy]" required>
        <label for="privacy-policy">{{ settings.privacy_label | default: "I agree to the Privacy Policy and consent to be contacted about my enquiry." }}</label>
      </div>

      <button type="submit" class="submit-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20.33 3.66996C20.1408 3.48213 19.9035 3.35008 19.6442 3.28833C19.3849 3.22659 19.1135 3.23753 18.86 3.31996L4.23 8.19996C3.95867 8.28593 3.71891 8.45039 3.54099 8.67255C3.36307 8.89471 3.25498 9.16462 3.23037 9.44818C3.20576 9.73174 3.26573 10.0162 3.40271 10.2657C3.5397 10.5152 3.74754 10.7185 4 10.85L10.07 13.85L13.07 19.94C13.1906 20.1783 13.3751 20.3785 13.6029 20.518C13.8307 20.6575 14.0929 20.7309 14.36 20.73H14.46C14.7461 20.7089 15.0192 20.6023 15.2439 20.4239C15.4686 20.2456 15.6345 20.0038 15.72 19.73L20.67 5.13996C20.7584 4.88789 20.7734 4.6159 20.7132 4.35565C20.653 4.09541 20.5201 3.85762 20.33 3.66996ZM4.85 9.57996L17.62 5.31996L10.53 12.41L4.85 9.57996ZM14.43 19.15L11.59 13.47L18.68 6.37996L14.43 19.15Z" fill="currentColor"></path>
        </svg>
        {{ settings.submit_button_text | default: "Send message" }}
      </button>
    {% endform %}

    <div class="contact-info">
      <div class="info-section">
        <h3>Business hours</h3>
        <div class="business-hours">
          <p>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="16" height="16">
