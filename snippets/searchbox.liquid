
<predictive-search>
  <form class="search" action="{{ routes.search_url }}" method="get" role="search">
    <div class="relative py-2 px-6 w-full text-gray-600 ">
      <input
        type="search"
        placeholder="Search Products"
        name="q"
        value="{{ search.terms | escape }}"
        class="bg-white w-full rounded-full py-2 pl-5 pr-4 focus:outline-none focus:ring-1 focus:ring-none placeholder:text-gray-600"
        onfocus="(function(el){try{var t=el.closest('form')&&el.closest('form').querySelector('.search-toggle'); if(t){t.classList.add('hidden');}}catch(e){}})(this);"
        onblur="(function(el){try{var t=el.closest('form')&&el.closest('form').querySelector('.search-toggle'); if(t){t.classList.remove('hidden');}}catch(e){}})(this);"
        aria-expanded="false"
        aria-owns="predictive-search-results"
        aria-controls="predictive-search-results"
      >
      <span
        class="absolute text-black right-8 top-4 cursor-pointer search-toggle"
        role="button"
        tabindex="0"
        aria-label="Focus search input"
        onclick="(function(el){try{var input = el.closest('predictive-search') && el.closest('predictive-search').querySelector('input[type=search]'); if(input){input.focus();}}catch(e){} })(this);"
        onkeydown="if (event.key==='Enter' || event.key===' ') { event.preventDefault(); (function(el){try{var input = el.closest('predictive-search') && el.closest('predictive-search').querySelector('input[type=search]'); if(input){input.focus();}}catch(e){} })(this); }"
      >
        {% render 'icons-svg-search', stroke_width: 2, class: 'size-6' %}
      </span>
      <div
        id="predictive-search"
        tabindex="-1"
        class="absolute left-0 right-0 top-full w-full z-50 max-h-[90vh] overflow-y-auto"
        style="-webkit-overflow-scrolling: touch;"
      ></div>
    </div>
  </form>
</predictive-search>

<!-- Mobile full-screen overlay removed so mobile uses inline predictive search like desktop -->
