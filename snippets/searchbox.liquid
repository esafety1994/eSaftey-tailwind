<script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
<predictive-search>
  <form class="search" action="{{ routes.search_url }}" method="get" role="search">
    <div class="relative w-full text-gray-600">
      <input
        id="Search"
        type="search"
        placeholder="Search products"
        name="q"
        value="{{ search.terms | escape }}"
        class="bg-white w-full rounded-sm py-2 pl-10 pr-4 focus:outline-none focus:ring-1 focus:ring-none placeholder:text-gray-600"
        aria-expanded="false"
        aria-owns="predictive-search-results"
        aria-controls="predictive-search-results"
      >
      <span class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5">
        {% render 'icons-svg-search', stroke_width: 2 %}
      </span>
    </div>
    <div id="predictive-search" tabindex="-1" class="absolute left-0 right-0 w-full z-10"></div>
  </form>
</predictive-search>
