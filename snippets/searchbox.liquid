
<predictive-search>
  <form class="search" action="{{ routes.search_url }}" method="get" role="search">
    <div class="relative w-0 md:w-full text-gray-600">
      <input
        id="Search"
        type="search"
        placeholder="Search Products"
        name="q"
        value="{{ search.terms | escape }}"
        class="bg-white opacity-0 md:!opacity-100 w-1 md:w-full rounded-sm py-2 pl-5 pr-4 focus:outline-none focus:ring-1 focus:ring-none placeholder:text-gray-600"
        aria-expanded="false"
        aria-owns="predictive-search-results"
        aria-controls="predictive-search-results"
      >
      <span class="absolute text-white md:text-black -right-10 md:right-3 top-2 w-5 h-5">
        {% render 'icons-svg-search', stroke_width: 2, %}
      </span>
    </div>
    <div id="predictive-search" tabindex="-1" class="absolute left-0 right-0 w-full"></div>
  </form>
</predictive-search>

<!-- Mobile full-screen search overlay (hidden on md+) -->
<div id="predictive-search-mobile" class="fixed inset-0 z-50 bg-white p-4 md:hidden hidden" aria-hidden="true">
  <div class="flex items-center gap-3">
    <input
      id="SearchMobile"
      type="search"
      placeholder="Search products"
      name="q"
      class="flex-1 bg-gray-100 rounded-sm py-2 pl-4 pr-3 focus:outline-none"
      aria-label="Search products"
    />
    <button id="predictive-search-mobile-close" class="ml-2 text-black p-2" aria-label="Close search">
      {% render 'icon-svg-close' %}
    </button>
  </div>

  <div id="predictive-search-mobile-results" class="mt-4 overflow-auto h-[calc(100vh-80px)]"></div>
</div>
