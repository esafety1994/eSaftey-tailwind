    style=""
    data-quotify-cart
    data-shop="{{ shop.metafields.quotify.shop_id }}"
    type="button"
    class="quotify-request-quote-btn m-add-to-cart m-spinner-button m-button m-button--primary"
  >
    View quote
  </button>
</div>
