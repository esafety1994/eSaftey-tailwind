<div class="tab-panel hidden" data-panel="faq">
  {% assign faq_html = product.metafields.custom.product_tabs_product_faq %}
  {% if faq_html and faq_html != blank %}
    <div class="faq-section text-sm text-gray-800 bg-gray-50 p-4 rounded">
      {{ faq_html | raw }}
    </div>
  {% else %}
    <div class="text-sm text-gray-600">Frequently Asked Questions will be listed here.</div>
  {% endif %}
</div>
