{{  product.metafields.custom.product_specification }}
{% assign myRichText = product.metafields.custom.product_tabs_product_specification %}
{% assign rows = myRichText | split: '\n' %}
{% if myRichText == blank %}
  <div class="text-sm text-gray-600 py-4">N/A</div>
{% else %}
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-700 table-auto">
      <thead>
        <tr>
          <th class="bg-gray-100" colspan="3">Specifications</th>
        </tr>
      </thead>
      <tbody>
        {% for row in rows %}
          {% assign cells = row | split: ',' %}
          {% assign row_mod = forloop.index0 | modulo: 2 %}
          <tr class="{% if row_mod == 1 %}bg-gray-50{% endif %}">
            {% for cell in cells %}
              <td class="px-4 py-2 align-top">{{ cell | strip }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endif %}
