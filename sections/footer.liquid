<footer class="py-8 bg-black">
  <div class="container mx-auto px-4">
    <div class="w-full flex flex-col justify-between md:gap-4 md:flex-row md:flex-wrap">
      {% for block in section.blocks %}
        <div class="md:mb-4">
          {% render 'footer-block', block: block %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.footer_image %}
      <div class="mt-6">
        {% render 'responsive-image', image: section.settings.footer_image, wrapper_class: 'w-full h-32 md:h-48 lg:h-64 overflow-hidden', image_class: 'w-full h-full object-contain object-center' %}
      </div>
    {% endif %}
  </div>
</footer>
 
<script>
  (function () {
    try {
      if (window.__eSafetyAccordionLoadedFooter) {
        if (window.esafetyAccordionInit) window.esafetyAccordionInit(document);
        return;
      }
      // load globally for the theme so footer accordions work on all devices
      window.__eSafetyAccordionLoadedFooter = true;
      var l = document.createElement('link');
      l.rel = 'stylesheet';
      l.href = '{{ "accordion.css" | asset_url }}';
      document.head.appendChild(l);
      var s = document.createElement('script');
      s.src = '{{ "accordion.js" | asset_url }}';
      s.defer = true;
      s.onload = function () {
        if (window.esafetyAccordionInit) window.esafetyAccordionInit(document);
      };
      document.body.appendChild(s);
    } catch(e) { console.warn(e); }
  })();
</script>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_image",
      "label": "Footer image"
    },
    {
      "type": "link_list",
      "id": "footer_bottom_menu",
      "label": "Menu"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "limit": 4,
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Footer menu",
          "default": "main-menu"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Service",
          "info": "Leave blank to use menu title"
        },
      ]
    },
    {
      "type": "custom_text",
      "name": "Custom content",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Custom text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_max",
          "label": "Image max-width (px)",
          "default": "200px"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Content",
          "default": "<p>Enter your email below to be the first to know about new collections and product launches.</p>"
        },
      ]
    }
  ]
}
{% endschema %}
