<footer class="py-8 bg-black">
  <div class="container mx-auto px-4">
    <div class="w-full flex flex-col justify-between md:gap-4 md:flex-row md:flex-wrap">
      {% for block in section.blocks %}
        <div class="md:mb-4">
          {% render 'footer-block', block: block %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.footer_image %}
      <div class="mt-6">
        {% render 'responsive-image',
          image: section.settings.footer_image,
          wrapper_class: 'w-full h-32 md:h-48 lg:h-64 overflow-hidden',
          image_class: 'w-full h-full object-contain object-center'
        %}
      </div>
    {% endif %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [],
  "max_blocks": 5,
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "limit": 4,
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Footer menu",
          "default": "main-menu"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Service",
          "info": "Leave blank to use menu title"
        }
      ]
    },
    {
      "type": "custom_text",
      "name": "Custom content",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Custom text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_max",
          "label": "Image max-width (px)",
          "default": "200px"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Content",
          "default": "<p>Enter your email below to be the first to know about new collections and product launches.</p>"
        }
      ]
    },
    {
      "type": "footer-stay-in-touch",
      "name": "Stay in touch",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Let's Stay in touch"
        },
        
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Subscribe for exclusive offers, latest news & new product launches</p>"
        }
      ]
    }
  ]
}
{% endschema %}
