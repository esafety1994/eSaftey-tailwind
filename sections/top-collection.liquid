<section class="top-collections py-8">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <h3 class="text-2xl md:text-4xl font-semibold mb-6 text-center uppercase md:mb-12">{{ section.settings.heading }}</h3>
    {% endif %}

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-6">
      {% for block in section.blocks %}
        {% assign coll = collections[block.settings.collection] %}
        {% if coll %}
          <a href="{{ coll.url }}" class="group block">
            {% if coll.image %}
              {% render 'responsive-image',
                image: coll.image,
                alt: coll.title,
                image_class: 'w-auto h-32 md:h-22 lg:h-32 object-cover transition-transform group-hover:scale-105 rounded-full mx-auto',
              %}
            {% else %}
              <div class="flex items-center justify-center h-full text-gray-500">{{ 'No image' }}</div>
            {% endif %}
            <p class="mt-2 text-center text-sm md:text-base">{{ coll.title }}</p>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Top Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Top Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Top Collections",
      "category": "Collections"
    }
  ]
}
{% endschema %}
