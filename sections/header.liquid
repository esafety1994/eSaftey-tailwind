<header class="bg-black p-2">
    <div class="wrapper container flex items-center justify-between m-auto">
        {% render 'header' %}
    </div>
</header>

{% schema %}
{
    "name": "header",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_search",
            "label": "Show Search Box",
            "default": true
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Select Menu",
            "default": "main-menu"
        }
    ],
    "blocks": [
        {
            "type": "logo",
            "name": "Logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                }
            ]
        },
    ],
    "presets": [
        {
            "name": "Header",
            "blocks": [
                {
                    "type": "logo"
                }
            ]
        }
    ]
}
{% endschema %}
