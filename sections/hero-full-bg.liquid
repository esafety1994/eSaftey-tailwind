{% comment %}
  Section: Hero Full Background
  - Full-width background image
  - Section-level button text/url
  - Up to 2 blocks rendered as columns with gap-16
{% endcomment %}

<section id="hero-full-bg-{{ section.id }}" class="hero-full-bg relative w-full">
  {% if section.settings.background_image != blank %}
    <div
      class="absolute inset-0 bg-cover bg-center z-0"
      style="background-image: url('{{ section.settings.background_image | img_url: '2048x' }}');"
    ></div>
  {% endif %}

  {% if section.settings.overlay_opacity > 0 %}
    <div
      class="absolute inset-0 z-10"
      style="background-color: rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100 }});"
    ></div>
  {% endif %}

  <div class="relative z-20 container mx-auto px-4 py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
      {% for block in section.blocks %}
        <div class="block-content text-white">
          {% if block.settings.heading != blank %}
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ block.settings.heading }}</h2>
          {% endif %}
          {% if block.settings.content != blank %}
            <div class="prose prose-invert max-w-none">{{ block.settings.content }}</div>
          {% endif %}
          {% if forloop.first and section.settings.button_text != blank %}
            <div class="mt-6">
              <a
                href="{{ section.settings.button_url }}"
                class="inline-block bg-white text-black px-6 py-3 rounded font-semibold"
              >
                {{- section.settings.button_text -}}
              </a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    /* Ensure section takes full-bleed background */
    #hero-full-bg-{{ section.id }} { position: relative; overflow: hidden; }
    #hero-full-bg-{{ section.id }} .bg-cover { background-size: cover; background-position: center; }
    #hero-full-bg-{{ section.id }} .prose { color: inherit; }
  </style>

  {% schema %}
{
  "name": "Hero — Full Background",
  "settings": [
    { "type": "image_picker", "id": "background_image", "label": "Background image" },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity (0-100)",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 40
    },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop now" },
    { "type": "url", "id": "button_url", "label": "Button URL" }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "content", "label": "Content" }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [{ "name": "Hero — Full Background", "category": "Hero" }]
}
  {% endschema %}
</section>
