<section class="container max-w-7xl mx-auto py-8">
  <header class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">{{ blog.title }}</h1>
    {% if blog.description != blank %}
      <p class="text-gray-600 mt-2">{{ blog.description }}</p>
    {% endif %}
  </header>
  <nav class="text-sm text-gray-500 mb-4" aria-label="Breadcrumb">
    <a href="/" class="hover:underline">Home</a>
    <span class="mx-2">/</span>
    <span class="text-gray-700">{{ blog.title }}</span>
  </nav>

  {% paginate blog.articles by 12 %}
    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 py-4">
      {% for article in blog.articles %}
        {% render 'blog-card-item', article: article %}
      {% endfor %}
    </div>

    {% render 'pagination', paginate: paginate, base_url: blog.url %}
  {% endpaginate %}
</section>
