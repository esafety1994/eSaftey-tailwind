{% comment %}Reusable Text Blocks section â€” allows multiple blocks with text and text color settings{% endcomment %}
<div class="reusable-text">
  {% if section.settings.section_heading != blank %}
    <h2 class="reusable-text__heading">{{ section.settings.section_heading }}</h2>
  {% endif %}

  {% for block in section.blocks %}
    <div id="reusable-text-block-{{ block.id }}" class="reusable-text__item" style="color: {{ block.settings.text_color }};">
      {{ block.settings.text }}
    </div>
  {% endfor %}

  {% if section.blocks_count == 0 %}
    <div class="reusable-text__empty">Add a text block in the theme editor.</div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Reusable Text Blocks",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": ""
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text block",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Enter text</p>"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#000000"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Reusable Text Blocks",
      "category": "Text"
    }
  ]
}
{% endschema %}
