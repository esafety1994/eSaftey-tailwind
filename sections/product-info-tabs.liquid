{% comment %}
  Section: Product Information Tabs
  Renders the `product-details-expandable` snippet below the main product section.
{% endcomment %}

<section class="container mx-auto px-4 py-8 max-w-7xl product-info-tabs">
  <div class="container mx-auto px-4">
    {% render 'product-details-expandable', product: product, shipping_content: section.settings.shipping_content %}
  </div>
</section>

{% schema %}
{
  "name": "Product information tabs",
  "settings": [
    {
      "type": "liquid",
      "id": "shipping_content",
      "label": "Shipping & Return content (Liquid)",
      "default": "<h3>Shipping</h3>\n<p><strong>Estimated shipping times on our range of stocked items are as follows:</strong></p>"
    },
    {
      "type": "liquid",
      "id": "buyer_guide_content",
      "label": "Buyer's Guide content (Liquid)",
      "default": "<h3>Buyer's Guide</h3>\n<p><strong>Important information for custom cut to length products.</strong></p>"
    }
  ],
  "presets": [{ "name": "Product information tabs" }]
}
{% endschema %}
