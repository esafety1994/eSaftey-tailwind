<section
  id="m-app-section-{{ section.id }}"
  class="m-section m-app-section {{ section.settings.custom_class }}"
>
  <div class="m-section-my">
    <div class="m-app-section__content">
         <h3 class="m-section__heading py-12 text-center text-4xl font-semibold">
        {{ section.settings.heading }}
      </h3>
      {% for block in section.blocks %}
        {% render block %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "header",
      "content": "Custom Attributes"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom classes"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "App wrapper"
    }
  ]
}
{% endschema %}
