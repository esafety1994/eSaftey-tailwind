{% doc %}
  @prompt
    generate resuable bento grid layout with first column 1 big image 2nd column with 2 small image in row and last column with 1 image the first column needs to be 50% and the rest two needs to be 50%, the image should link to collection page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bento-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-bento-grid-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-bento-grid-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.gap }}px;
  }

  .ai-bento-grid-column-{{ ai_gen_id }}--first {
    flex: 0 0 {{ block.settings.first_column_width }}%;
  }

  .ai-bento-grid-column-{{ ai_gen_id }}--second {
    flex: 0 0 calc((100% - {{ block.settings.first_column_width }}%) / 2);
  }

  .ai-bento-grid-column-{{ ai_gen_id }}--third {
    flex: 0 0 calc((100% - {{ block.settings.first_column_width }}%) / 2);
  }

  .ai-bento-grid-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .ai-bento-grid-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    transition: transform 0.3s ease;
  }

  .ai-bento-grid-link-{{ ai_gen_id }}:hover .ai-bento-grid-image-wrapper-{{ ai_gen_id }} {
    transform: scale(1.02);
  }

  .ai-bento-grid-image-wrapper-{{ ai_gen_id }}--large {
    height: 100%;
  }

  .ai-bento-grid-image-wrapper-{{ ai_gen_id }}--small {
    flex: 1;
  }

  .ai-bento-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-bento-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-bento-grid-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-bento-grid-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-bento-grid-container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-bento-grid-column-{{ ai_gen_id }}--first,
    .ai-bento-grid-column-{{ ai_gen_id }}--second,
    .ai-bento-grid-column-{{ ai_gen_id }}--third {
      flex: 0 0 100%;
    }

    .ai-bento-grid-image-wrapper-{{ ai_gen_id }}--large {
      height: 400px;
    }

    .ai-bento-grid-image-wrapper-{{ ai_gen_id }}--small {
      height: 200px;
    }
  }
{% endstyle %}

<bento-grid-{{ ai_gen_id }} class="ai-bento-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bento-grid-container-{{ ai_gen_id }}">
    <div class="ai-bento-grid-column-{{ ai_gen_id }} ai-bento-grid-column-{{ ai_gen_id }}--first">
      {% if block.settings.collection_1 %}
        <a href="{{ block.settings.collection_1.url }}" class="ai-bento-grid-link-{{ ai_gen_id }}">
          <div class="ai-bento-grid-image-wrapper-{{ ai_gen_id }} ai-bento-grid-image-wrapper-{{ ai_gen_id }}--large">
            {% if block.settings.image_1 %}
