{% doc %}
  @prompt
    generate a grid layout for 8 products in 2 rows and 4 columns needs to be able to select the products to list
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-grid__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-grid__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-product-grid__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-grid__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-grid__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-product-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-grid__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-grid__info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-grow: 1;
  }

  .ai-product-grid__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    text-decoration: none;
    font-weight: 500;
  }

  .ai-product-grid__title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.product_title_hover_color }};
  }

  .ai-product-grid__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-product-grid__compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-product-grid__empty-state-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-product-grid__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-grid__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-product-grid__grid-{{ ai_gen_id }}">
      {% assign has_products = false %}
      {% for i in (1..8) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}
        
        {% if product != blank %}
          {% assign has_products = true %}
          <div class="ai-product-grid__item-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-product-grid__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-grid__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-product-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>
            
            <div class="ai-product-grid__info-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-product-grid__title-{{ ai_gen_id }}">
                {{ product.title }}
              </a>
              
              <div class="ai-product-grid__price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-grid__compare-price-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                <span>{{ product.price | money }}</span>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {% unless has_products %}
        <div class="ai-product-grid__empty-state-{{ ai_gen_id }}">
          Select up to 8 products to display in this grid
        </div>
      {% endunless %}
    </div>
  </div>
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

